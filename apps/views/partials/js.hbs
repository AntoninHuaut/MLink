<script src="/js/detectmobilebrowser.js"></script>
<script>
    refresh();

    function refresh() {
        let container = [$(".container")];
        if (!container) return;

        if (jQuery.browser.mobile)
            container.forEach(el => {
                el.removeClass("w-25");
                el.removeClass("w-50");
            });
    }
</script>

